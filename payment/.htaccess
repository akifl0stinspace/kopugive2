# Stripe Webhook Security
# Allow webhook.php to receive POST requests from Stripe

<Files "stripe_webhook.php">
    # Allow Stripe IPs (optional - for extra security)
    # Uncomment and add Stripe IPs if needed
    # Order Deny,Allow
    # Deny from all
    # Allow from 3.18.12.63
    # Allow from 3.130.192.231
    # Allow from 13.235.14.237
    # Allow from 13.235.122.149
    
    # Allow all for now (webhook signature verification provides security)
    Allow from all
</Files>

# Protect sensitive files
<FilesMatch "^(stripe_checkout|stripe_success|stripe_cancel)\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

